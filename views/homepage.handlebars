<body>
    <section class="section">
        <div class="container">
            <header class="heading has-text-centered">
                <h1 class="title is-1 has-text-primary">Wellness Wizard</h1>
                <p class="subtitle has-text-grey-dark">"Your path to wellness, guided by wizards"</p>
            </header>

            <div class="wizard" id="animated-wizard">
                <!-- ... (Other wizard elements) ... -->
            </div>

            <div class="columns">
                <div class="column">
                    <div class="card user-info is-rounded">
                        <div class="card-content">
                            <h2 class="title">User Info</h2>
                            <ul class="list-none p-0">
                                <li>Name: Emily</li>
                                <li>Gender: Female</li>
                                <li>Height: 7ft</li>
                                <li>Weight: 130lb</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="card magical-inspiration is-rounded">
                        <div class="card-content">
                            <h2 class="title">Magical Inspiration</h2>
                            <h4>"Quote of the day"</h4>
                            <p><small>Display Date: 9/21/2023</small></p>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="card hydration-tracker is-rounded">
                        <div class="card-content">
                            <h2 class="title">Hydration Tracker</h2>
                            <p>You have consumed {{waterConsumption}} liters of water today.</p>
                            <form action="/update-water" method="POST" class="my-2">
                                <label for="waterAmount" class="block mb-1">Add water:</label>
                                <input type="number" id="waterAmount" name="waterAmount" min="0" step="0.1"
                                    class="block w-full p-1 mb-2 border rounded">
                                <button type="submit"
                                    class="block w-full p-1 border rounded bg-blue-500 hover:bg-blue-700 text-white">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="columns">
                <div class="column">
                    <div class="card fitness-tracker is-rounded">
                        <div class="card-content">
                            <h2 class="title">Fitness Tracker</h2>
                            {{#each workouts}}
                            <p>{{this}}</p>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="card sleep-log is-rounded">
                        <div class="card-content">
                            <h2 class="title">Sleep Log</h2>
                            <p>You slept for {{totalSleep}} hours last night.</p>
                        </div>
                    </div>
                </div>

                <div class="column">
                    <div class="card calorie-intake is-rounded">
                        <div class="card-content">
                            <h2 class="title">Calorie Intake</h2>
                            <p>You have consumed {{calorieIntake}}/2500 calories today.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <style>
.wizard {
    position: relative;
    width: 190px;
    height: 240px;
}

.body {
    position: absolute;
    bottom: 0;
    left: 68px;
    height: 100px;
    width: 60px;
    background: #3498db;

    &::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 20px;
        height: 100px;
        width: 60px;
        background: #3498db;
        transform: skewX(14deg);
    }
}

.right-arm {
    position: absolute;
    bottom: 74px;
    left: 110px;
    height: 44px;
    width: 90px;
    background: #3498db;
    border-radius: 22px;
    /** animation */
    transform-origin: 16px 22px;
    transform: rotate(70deg);
    animation: right_arm 10s ease-in-out infinite;

    .right-hand {
        position: absolute;
        right: 8px;
        bottom: 8px;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: blanchedalmond;
        /** animation */
        transform-origin: center center;
        transform: rotate(-40deg);
        animation: right_hand 10s ease-in-out infinite;

        &::after {
            content: "";
            position: absolute;
            right: 0px;
            top: -8px;
            width: 15px;
            height: 30px;
            border-radius: 10px;
            background: blanchedalmond;
            /** Animation */
            transform: translateY(16px);
            animation: right_finger 10s ease-in-out infinite;
        }
    }
}

.left-arm {
    position: absolute;
    bottom: 74px;
    left: 26px;
    height: 44px;
    width: 70px;
    background: #3498db;
    border-bottom-left-radius: 8px;
    /** animation */
    transform-origin: 60px 26px;
    transform: rotate(-70deg);
