                <!-- Calorie Intake Card -->
                <div class="column">
    <div class="card calorie-intake" onclick="toggleCardContent(this)">
        <div class="card-content">
            <div class="icon-wrapper">
                <span class="icon"><i class="fas fa-apple-alt fa-lg"></i></span>
            </div>
            <h2 class="title">Calorie Intake</h2>
