}

@keyframes head {
    0% {
        transform: rotate(-3deg);
    }

    10% {
        transform: translatex(10px) rotate(7deg);
    }

    50% {
        transform: translatex(0px) rotate(0deg);
    }

    56% {
        transform: rotate(-3deg);
    }
